---
permalink: /sitemap-pages.xml
eleventyExcludeFromCollections: true
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {# Homepage #}
  <url>
    <loc>{{ "/" | url | absoluteUrl(site.url) }}</loc>
    <lastmod>{{ page.inputPath | gitLastMod(buildTime) | isoDate }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  {# All non-draft site pages, excluding 404 and noindex #}
  {% for p in collections.all %}
    {% if p.url and p.url != "/404.html" and p.data.permalink != false and not p.data.draft and p.data.robots != "noindex" %}
    <url>
      <loc>{{ p.url | url | absoluteUrl(site.url) }}</loc>
      <lastmod>{{ p.inputPath | gitLastMod(p.date) | isoDate }}</lastmod>
      <changefreq>{{ p.data.changefreq or "monthly" }}</changefreq>
      <priority>{{ p.data.priority or "0.6" }}</priority>
      {# Optional hreflang list: set p.data.alternates = [{lang:"en", url:"/en/page/"}, ...] #}
      {% if p.data.alternates %}
        {{ p.data.alternates | hreflangs(site.url) | safe }}
      {% endif %}
    </url>
    {% endif %}
  {% endfor %}
</urlset>
