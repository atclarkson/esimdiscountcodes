<!-- Last updated: {{ buildTime }} -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Primary Meta Tags -->
    <meta name="description" content="{% if description %}{{ description }}{% else %}Find the best eSIM discount codes and promo codes for top providers{% endif %}">
    <meta name="keywords" content="{% if page.url == '/' %}eSIM discount codes, eSIM promo codes, international eSIM deals, travel eSIM coupons{% else %}{{ title | lower | replace(' ', ' ') }}, {% for key, provider in codes %}{{ provider.name | lower }} discount code, {% endfor %}eSIM promo codes{% endif %}">
    <meta name="author" content="eSIMDiscountCodes.com">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://esimdiscountcodes.com{{ page.url }}">
    
    <title>{% if title %}{{ title }}{% else %}eSIM Discount Codes{% endif %}</title>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://esimdiscountcodes.com{{ page.url }}">
    <meta property="og:title" content="{% if title %}{{ title }}{% else %}eSIM Discount Codes{% endif %}">
    <meta property="og:description" content="{% if description %}{{ description }}{% else %}Find the best eSIM discount codes and promo codes for top providers{% endif %}">
    <meta property="og:image" content="https://esimdiscountcodes.com/assets/og-image.jpg">
    <meta property="og:site_name" content="eSIM Discount Codes">
    <meta property="og:locale" content="en_US">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://esimdiscountcodes.com{{ page.url }}">
    <meta property="twitter:title" content="{% if title %}{{ title }}{% else %}eSIM Discount Codes{% endif %}">
    <meta property="twitter:description" content="{% if description %}{{ description }}{% else %}Find the best eSIM discount codes and promo codes for top providers{% endif %}">
    <meta property="twitter:image" content="https://esimdiscountcodes.com/assets/og-image.jpg">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
    
    <!-- CSS -->
    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Schema.org structured data for Website -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "eSIM Discount Codes",
      "url": "https://esimdiscountcodes.com",
      "description": "Find the best eSIM discount codes and promo codes for international travel",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://esimdiscountcodes.com/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
    <!-- Provider-specific structured data with FAQ -->
{% if page.url != '/' %}
  {% set currentProvider = page.url | replace('/', '') | replace('/', '') %}
  {% if codes[currentProvider] %}
    {% set provider = codes[currentProvider] %}
    {% set primaryCode = provider.codes | selectattr("isPrimary", "equalto", true) | first %}
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": ["WebPage", "FAQPage"],
      "name": "{{ provider.name }} Discount Codes",
      "description": "Save money with verified {{ provider.name }} discount codes and promo codes",
      "url": "https://esimdiscountcodes.com{{ page.url }}",
      "mainEntity": [
        {
          "@type": "Organization",
          "name": "{{ provider.name }}",
          "url": "{{ provider.url }}",
          "description": "{{ provider.description }}"
        },
        {% if primaryCode %}
        {
          "@type": "Question",
          "name": "Does the {{ primaryCode.code }} code work on all {{ provider.name }} plans?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, the {{ primaryCode.code }} discount code gives you {{ primaryCode.discount | lower }} and works on all {{ provider.name }} eSIM plans for any destination. The code is verified and working as of {{ primaryCode.lastTested }}."
          }
        },
        {% endif %}
        {
          "@type": "Question",
          "name": "How do I use {{ provider.name }} discount codes?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "To use a {{ provider.name }} discount code, visit their website, select your eSIM plan, enter the promo code at checkout, and apply it before payment. The discount will be automatically applied to your order total."
          }
        },
        {
          "@type": "Question",
          "name": "Are {{ provider.name }} discount codes free to use?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, all {{ provider.name }} discount codes listed on our site are completely free to use. Simply copy the code and paste it during checkout to save money on your eSIM purchase."
          }
        },
        {
          "@type": "Question",
          "name": "How often are {{ provider.name }} codes updated?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "We update {{ provider.name }} discount codes daily and test them regularly to ensure they work. All codes show the last tested date, and expired codes are removed within 24 hours."
          }
        },
        {
          "@type": "Question",
          "name": "Can I use multiple {{ provider.name }} discount codes together?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "No, {{ provider.name }} typically allows only one discount code per order. We recommend using our highest value code for maximum savings on your eSIM purchase."
          }
        },
        {
          "@type": "Question",
          "name": "Do {{ provider.name }} discount codes expire?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Some {{ provider.name }} discount codes have expiration dates while others don't. Check each code for expiry information. We remove expired codes and regularly verify all active codes work."
          }
        },
        {
          "@type": "Question",
          "name": "What if my {{ provider.name }} discount code doesn't work?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "If a {{ provider.name }} code doesn't work, try a different code from our list. Codes may have usage limits or specific terms. All our codes are tested, but availability can change quickly."
          }
        },
        {
          "@type": "Question",
          "name": "Are these official {{ provider.name }} discount codes?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Our {{ provider.name }} codes come from various sources including official promotions, influencer partnerships, and public deals. All codes are verified to work before being listed on our site."
          }
        },
        {
          "@type": "Question",
          "name": "Can I use {{ provider.name }} codes for existing customers?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Most {{ provider.name }} discount codes work for both new and existing customers unless specifically marked as 'new customer only'. Check the code description for any restrictions."
          }
        },
        {
          "@type": "Question",
          "name": "How much can I save with {{ provider.name }} discount codes?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "{% if primaryCode %}With our best {{ provider.name }} code {{ primaryCode.code }}, you can save {{ primaryCode.discount | lower }}.{% else %}{{ provider.name }} discount codes on our site offer various savings amounts.{% endif %} Savings vary by code and plan type, so check each code for specific discount details."
          }
        }
      ],
      "offers": [
        {% for code in provider.codes %}
        {
          "@type": "Offer",
          "name": "{{ code.code }} - {{ code.discount }}",
          "description": "{{ code.description }}",
          "priceSpecification": {
            "@type": "PriceSpecification",
            "price": "{{ code.discount }}"
          },
          "validThrough": "{% if code.expiryDate %}{{ code.expiryDate }}{% else %}2025-12-31{% endif %}"
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
    </script>
  {% endif %}
{% endif %}

{% if codes[currentProvider] %}
  {% for code in provider.codes %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "{{ provider.name }} {{ code.code }} Discount Code",
    "description": "{{ code.description }}",
    "brand": {
      "@type": "Brand",
      "name": "{{ provider.name }}"
    },
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "USD",
      "availability": "https://schema.org/InStock",
      "seller": {
        "@type": "Organization",
        "name": "eSIMDiscountCodes.com"
      }
    },
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "{% if provider.rating %}{{ provider.rating }}{% else %}4.5{% endif %}",
      "bestRating": "5",
      "worstRating": "1",
      "ratingCount": "{{ provider.codes | length * 50 }}"
    }
  }
  </script>
  {% endfor %}
{% endif %}
    
    <!-- Breadcrumb structured data -->
    {% if page.url != '/' %}
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://esimdiscountcodes.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "{{ title }}",
          "item": "https://esimdiscountcodes.com{{ page.url }}"
        }
      ]
    }
    </script>
    {% endif %}
    
</head>
<body>
<!-- Navigation -->
<nav class="navbar">
    <div class="nav-container">
        <a href="/" class="nav-logo">
            <svg width="28" height="28" viewBox="0 0 90.1 85.6" fill="currentColor" class="logo-icon">
                <path d="M18.1,85.6h53.9c10,0,18.1-8.1,18.1-18.1V18.1c0-10-8.1-18.1-18.1-18.1H18.1C8.1,0,0,8.2,0,18.1v49.4c0,9.9,8.1,18.1,18.1,18.1ZM85.5,67.5c0,7.5-6.1,13.6-13.6,13.6h-7.3c-3.2,0-11.9-8.5-11.9-17.6,0-3.3,2.7-6,6-6h26.7v10h.1ZM85.5,52.9h-24.5v-20.2h24.5v20.2ZM25.2,4.6h46.7c7.5,0,13.6,6.1,13.6,13.6v10h-26.7c-3.3,0-6-2.7-6-6s2.7-6,6-6c1.2,0,2.2-1,2.2-2.2s-1-2.2-2.2-2.2c-5.8,0-10.5,4.7-10.5,10.5,0,5,3.6,9.3,8.3,10.3v20.8c-4.7,1-8.3,5.3-8.3,10.3,0,6.4,3.7,13.2,8,17.6h-22.6c4.4-4.3,8-11.2,8-17.6,0-5-3.6-9.3-8.3-10.3v-21c4.7-1,8.3-5.3,8.3-10.3,0-5.8-4.7-10.5-10.5-10.5-3.3,0-6-2.7-6-6v-1ZM4.5,18.1c0-7.5,6.1-13.6,13.6-13.6h2.6v1c0,5.8,4.7,10.5,10.5,10.5,3.3,0,6,2.7,6,6s-2.7,6-6,6H4.5v-9.9ZM4.5,32.7h24.5v20.3H4.5v-20.3ZM4.5,57.4h26.7c3.3,0,6,2.7,6,6,0,9-8.7,17.6-11.9,17.6h-7.3c-7.5,0-13.6-6.1-13.6-13.6v-10h.1Z"/>
            </svg>
            <span class="logo-text">eSIMDiscountCodes.com</span>
        </a>
        
        <!-- Mobile menu button -->
        <button class="mobile-menu-btn" aria-label="Toggle navigation">
            <span class="hamburger"></span>
            <span class="hamburger"></span>
            <span class="hamburger"></span>
        </button>
        
        <ul class="nav-menu">
            {% set providerArray = [] %}
            {% for key, provider in codes %}
                {% set providerArray = providerArray.concat([{key: key, provider: provider}]) %}
            {% endfor %}
            
            <!-- Top 3 providers (your main ones) -->
            {% for item in providerArray.slice(0, 3) %}
            <li><a href="/{{ item.key }}">{{ item.provider.name }}</a></li>
            {% endfor %}
            
            <!-- Dropdown for the rest -->
            {% if providerArray.length > 3 %}
            <li class="dropdown">
                <a href="#" class="dropdown-toggle">
                    More Providers <i class="fas fa-chevron-down"></i>
                </a>
                <ul class="dropdown-menu">
                    {% for item in providerArray.slice(3) %}
                    <li><a href="/{{ item.key }}">{{ item.provider.name }}</a></li>
                    {% endfor %}
                </ul>
            </li>
            {% endif %}
        </ul>
    </div>
</nav>

    <!-- Main Content -->
    <main>
        {{ content | safe }}
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>eSIM Providers</h3>
                <ul>
                    {% for key, provider in codes %}
                    <li><a href="/{{ key }}">{{ provider.name }} Codes</a></li>
                    {% endfor %}
                </ul>
            </div>
            
            <div class="footer-section">
                <h3>About</h3>
                <ul>
                    {% for item in about %}
                    <li><a href="{{ item.url }}">{{ item.title }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            
            <div class="footer-section">
                <h3>Resources</h3>
                <ul>
                    {% for item in resources %}
                    <li><a href="{{ item.url }}">{{ item.title }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        
        <!-- Disclaimer Section -->
        <section class="disclaimer-section">
            <div class="disclaimer-card">
                <h3><i class="fas fa-info-circle"></i> Important Disclosure</h3>
                <p><strong><i class="fas fa-handshake"></i> Affiliate Disclosure:</strong> We may earn a commission when you purchase through our links.</p>
                <p><i class="fas fa-globe"></i> These discount codes are found on publicly accessible areas of the internet and aggregated here for your convenience. Some codes may generate affiliate revenue for their original publishers. We may also include our own affiliate codes and links to help support this website.</p>
                <p><i class="fas fa-clock"></i> All codes are verified regularly, but availability and terms may change without notice. Always check the merchant's website for current offers and terms.</p>
            </div>
        </section>
        
        <div class="footer-bottom">
            <p>&copy; 2025 eSIMDiscountCodes.com. All rights reserved.</p>
        </div>
    </footer>
    <!-- External JavaScript -->
<script src="/assets/main.js"></script>
</body>
</html>